bindsym $mod+Shift+Print exec 'grim -g "$(slurp)" ~/ps_$(date +"%Y%m%d%H%M%S").png', mode "default"
bindsym $mod+Print exec 'grim ~/ps_$(date +"%Y%m%d%H%M%S").png', mode "default"
bindsym $mod+Shift+Ctrl+Print exec 'grim -g "$(slurp)" - | wl-copy', mode "default"
bindsym $mod+Ctrl+Print exec 'grim - | wl-copy', mode "default"
bindsym $mod+Alt+Print exec 'grim -g "$(slurp)" - | swappy -f -', mode "default"
