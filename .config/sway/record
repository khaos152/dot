# Screenshot

bindsym Shift+Print exec 'grim -g "$(slurp)" ~/Pictures/$(date +"%Y%m%d%H%M%S").png', mode "default"
bindsym Print exec 'grim ~/Pictures/$(date +"%Y%m%d%H%M%S").png', mode "default"
bindsym Ctrl+Shift+Print exec 'grim -g "$(slurp)" - | wl-copy', mode "default"
bindsym Ctrl+Print exec 'grim - | wl-copy', mode "default"
